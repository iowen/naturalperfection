                <!-- Portfolio Content -->
           
                   <div id="container1" >
                       @{
                           foreach (var i in ViewBag.album.PhotoAlbumItems)
                           {
                            <div class="three columns box">
                                <a href="@i.Photo.Location" data-lightbox="example-set"><img src="@i.Photo.Location" alt="" /></a>
                            </div>
                           }
                    }
                   </div>
                  
                   
