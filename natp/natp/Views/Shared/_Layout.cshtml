            z-index: 999;
        }

        #modal {
            position: absolute;
            width: 900px;
            height: 700px;
            left: 50%;
            top: 50%;
            margin-left: -450px;
            margin-top: -350px;
            background: #fff;
            border-radius: 14px;
            color: #000;
            padding: 8px;
            z-index: 9999;
            overflow: auto;
        }

        #content {
            border-radius: 8px;
            background: #fff;
            padding: 20px;
            z-index: 99999;
        }

        #close {
            position: absolute;
            color: #f00;
            width: 24px;
            height: 27px;
            display: block;
            top: -1px;
            right: -7px;
            z-index: 99999;
        }
        </style>
    <script>
    // Wait until the DOM has loaded before querying the document
    function showModal() {

        document.getElementById("overlay").style.display = "block";
        document.getElementById("modal").style.display = "block";
    }

    function closeModal() {

        document.getElementById("overlay").style.display = "none";
        document.getElementById("modal").style.display = "none";
    }
    </script>

